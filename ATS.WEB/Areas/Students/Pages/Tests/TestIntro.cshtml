@page
@model ATS.WEB.Areas.Students.Pages.Tests.TestIntroModel

@{
    ViewData["Title"] = "Тестирование";
}

<h1>Тестирование</h1>

<div>
    <h4>Результаты теста</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.Answerer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestResult.Answerer.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.Topic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestResult.Topic.Topic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.Reviewer)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TestResult.Reviewer.User.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.PassDate)
        </dt>
        <dd class="col-sm-10">
            <p>@(Model.TestResult.PassDate == default(DateTime) ? null: Model.TestResult.PassDate)</p>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TestResult.Score)
        </dt>
        <dd class="col-sm-10">
            <p>@Model.GetTextScore(Model.TestResult.Score)</p>
        </dd>
    </dl>
</div>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="submit" value="Начать тест" class="btn btn-primary" disabled="@(Model.DisbaleRunTest ? "disabled" : null)" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>
