@page
@model ATS.WEB.Areas.Students.Pages.Tests.Index1Model
@{
    ViewData["Title"] = $"Тест на тему {Model.Lesson.Topic}";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lesson.Id" />
            @foreach (var question in Model.Lesson.Questions) {
                <p>@question.QuestionText</p>
                foreach (var answer in question.Answers) {
                    <div>
                        <label class="control-label">@answer.AnswerText</label>
                        <input asp-for="@answer.IsRight">
                    </div>
                }
            }
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Назад к списку</a>
</div>