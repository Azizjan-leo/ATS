@page
@model ATS.WEB.Areas.Teacher.Pages.Lessons.EditModel

@{
    ViewData["Title"] = "Редактирование урока";
    ViewBag.LessonId = Model.Lesson.Id;
}

<h1>Редактор урока</h1>

<h4>Урок</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lesson.Id" />
            <div class="form-group">
                <label asp-for="Lesson.Topic" class="control-label"></label>
                <input asp-for="Lesson.Topic" class="form-control" />
                <span asp-validation-for="Lesson.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lesson.Content" class="control-label"></label>
                <input asp-for="Lesson.Content" class="form-control" />
                <span asp-validation-for="Lesson.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Назад</a>
</div>

<div>
    <div>
        <partial name="_QuestionsPartial" model="Model.Lesson.Questions" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
