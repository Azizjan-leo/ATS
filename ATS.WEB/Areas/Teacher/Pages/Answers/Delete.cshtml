@page
@model ATS.WEB.Areas.Teacher.Pages.Answers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление ответа</h1>

<h3>Вы действительно хотите удалить данный ответ</h3>
<div>
    <h4>Ответ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Answer text
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.AnswerText)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Верный ответ?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.IsRight)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Input.AnswerId" />
        <input type="hidden" asp-for="Input.QuestionId" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
    </form>
</div>
