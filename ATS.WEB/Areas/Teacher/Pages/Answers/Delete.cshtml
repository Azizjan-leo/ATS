@page
@model ATS.WEB.Areas.Teacher.Pages.Answers.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Answer text
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.AnswerText)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Is right answer?
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Input.IsRight)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Input.AnswerId" />
        <input type="hidden" asp-for="Input.QuestionId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>
