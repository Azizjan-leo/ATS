@page
@model ATS.WEB.Areas.Teacher.Pages.Materials.IndexModel

@{
    ViewData["Title"] = "Учебный материал";
}

<h1>Учебный материал</h1>

<p>
    <a asp-page="Create">Создать новый</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].UploadDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Material[0].FileName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Material)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UploadDate)
                </td>
                <td>
                    <a href="~/materials/@item.FileName" download> @item.Name</a>
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
