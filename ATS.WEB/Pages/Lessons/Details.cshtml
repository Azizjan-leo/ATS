@page
@model ATS.WEB.Pages.Lessons.DetailsModel
@using WEB.Data.Entities;
@using WEB.Enums;
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Lesson.Topic)</h1>
<hr />
<div>
    <span style="white-space: pre-line">@Html.DisplayFor(m => m.Lesson.Content)</span>
</div>
<hr />
<div>
    @if (SignInManager.IsSignedIn(User))
    {
        @if (User.IsInRole(Role.Student.ToString()))
        {
            <li class="nav-item">
                <a class="nav-link" asp-area="Students" asp-page="/Tests/Index"><h3>Пройти тест</h3></a>
            </li>
        }
    }

</div>
<div>
    <a href="#" onclick="history.back(-1);">Назад</a>
</div>
